<?php $__env->startSection('main'); ?>

<h1><?php echo trans('messages.user_list'); ?></h1>

<p><?php echo link_to_route('users.create', trans('messages.user_add'), null, array('class' => 'btn btn-lg btn-success')); ?></p>

<?php if($users->count()): ?>
	<table class="table table-striped">
		<thead>
			<tr>
				<th><?php echo trans('fields.nome'); ?></th>
				<th><?php echo trans('fields.email'); ?></th>
				<th><?php echo trans('fields.usuarioTipos_id'); ?></th>
				<th>&nbsp;</th>
			</tr>
		</thead>

		<tbody>
			<?php foreach($users as $user): ?>
				<tr>
					<td><?php echo e($user->nome); ?></td>
					<td><?php echo e($user->email); ?></td>
					<td><?php echo e($user->usuarioTipo()->descricao); ?></td>
                    <td>
                        <?php echo Form::open(array('style' => 'display: inline-block;', 'method' => 'DELETE', 'route' => array('users.destroy', $user->id))); ?>

                            <?php echo Form::submit(trans('fields.delete'), array('class' => 'btn btn-danger')); ?>

                        <?php echo Form::close(); ?>

                        <?php echo link_to_route('users.edit', trans('fields.edit'), array($user->id), array('class' => 'btn btn-info')); ?>

                    </td>
				</tr>
			<?php endforeach; ?>
		</tbody>
	</table>
<?php else: ?>
	<?php echo trans('messages.user_empty'); ?>

<?php endif; ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('layouts.scaffold', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>