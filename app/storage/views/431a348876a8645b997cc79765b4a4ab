<h1><?php echo trans('messages.usuarioTipo_list'); ?></h1>

<p><?php echo link_to_route('usuarioTipos.create', trans('messages.usuarioTipo_add'), null, array('class' => 'btn btn-lg btn-success')); ?></p>

<?php if($usuarioTipos->count()): ?>
	<table class="table table-striped">
		<thead>
			<tr>
				<th><?php echo trans('fields.descricao'); ?></th>
				<th><?php echo trans('fields.prioridade'); ?></th>
				<th>&nbsp;</th>
			</tr>
		</thead>

		<tbody>
			<?php foreach($usuarioTipos as $usuarioTipo): ?>
				<tr>
					<td><?php echo e($usuarioTipo->descricao); ?></td>
					<td><?php echo e($usuarioTipo->prioridade); ?></td>
                    <td>
                        <?php echo Form::open(array('style' => 'display: inline-block;', 'method' => 'DELETE', 'route' => array('usuarioTipos.destroy', $usuarioTipo->id))); ?>

                            <?php echo Form::submit(trans('fields.delete'), array('class' => 'btn btn-danger')); ?>

                        <?php echo Form::close(); ?>

                        <?php echo link_to_route('usuarioTipos.edit', trans('fields.edit'), array($usuarioTipo->id), array('class' => 'btn btn-info link')); ?>

                    </td>
				</tr>
			<?php endforeach; ?>
		</tbody>
	</table>
<?php else: ?>
	<?php echo trans('messages.plataforma_empty'); ?>

<?php endif; ?>