<?php $__env->startSection('main'); ?>

<h1><?php echo trans('messages.campeonatoTipo_list'); ?></h1>

<p><?php echo link_to_route('campeonatoTipos.create', trans('messages.campeonatoTipo_add'), null, array('class' => 'btn btn-lg btn-success')); ?></p>

<?php if($campeonatoTipos->count()): ?>
	<table class="table table-striped">
		<thead>
			<tr>
				<th><?php echo trans('fields.descricao'); ?></th>
				<th><?php echo trans('fields.maximo_jogadores_partida'); ?></th>
				<th>&nbsp;</th>
			</tr>
		</thead>

		<tbody>
			<?php foreach($campeonatoTipos as $campeonatoTipo): ?>
				<tr>
					<td><?php echo e($campeonatoTipo->descricao); ?></td>
					<td><?php echo e($campeonatoTipo->maximo_jogadores_partida); ?></td>
                    <td>
                        <?php echo Form::open(array('style' => 'display: inline-block;', 'method' => 'DELETE', 'route' => array('campeonatoTipos.destroy', $campeonatoTipo->id))); ?>

                            <?php echo Form::submit(trans('fields.delete'), array('class' => 'btn btn-danger')); ?>

                        <?php echo Form::close(); ?>

                        <?php echo link_to_route('campeonatoTipos.edit', trans('fields.edit'), array($campeonatoTipo->id), array('class' => 'btn btn-info')); ?>

                    </td>
				</tr>
			<?php endforeach; ?>
		</tbody>
	</table>
<?php else: ?>
	<?php echo trans('messages.campeonatoTipo_empty'); ?>

<?php endif; ?>


<?php $__env->stopSection(); ?>
<?php echo $__env->make('layouts.scaffold', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>